extends layout.pug
block content
    div#content
        h1= title
        if errors.length
            ul.error-list
                each error in errors
                    li= error.msg
        form(method='POST', action=action)
            label Title:
            input(type='text', name='title', value=review ? review.title : '')
            label Author:
            input(type='text', name='author', value=review ? review.author : '')
            label Review:
            textarea(name='content', rows=5)= review ? review.content : ''
            button(type='submit') Save
            a(href='/reviews', class='btn-cancel') Cancel
            